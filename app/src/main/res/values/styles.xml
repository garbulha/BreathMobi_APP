<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorLightPimaryColor</item>

    </style>



    <!-- Theme Login. -->
    <style name="AppTheme.Login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorLightPimaryColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
    <!-- Theme Perfil. -->
    <style name="AppTheme.Perfil" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorLightPimaryColor</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>

    <style name="ProgressBar" parent="Theme.AppCompat.Light">
        <item name="android:background">#7BC047</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
    </style>



    <style name="AppTheme.Logado" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorAccent">@color/colorLightPimaryColor</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorControlNormal">@android:color/white</item>
    <item name="material_drawer_primary_text">@color/md_black_1000</item>
    <item name="material_drawer_selected_text">@color/colorPrimaryDark</item>


    </style>



</resources>
